<ul class="sidenav" id="mobile-demo">

    <li><a id="dashboardLink" href="/dashboard">Back to Dashboard</a></li>

</ul>

<div class="container">
    <div class="row">
        <div class="col s10 offset-s1">
            <div class="card">
                <div class="row" id="photoRow">
                    <div class="col s4">
                        <div class="card-image">
                            <img
                                src="https://upload.wikimedia.org/wikipedia/commons/thumb/3/35/Neckertal_20150527-6384.jpg/1200px-Neckertal_20150527-6384.jpg">
                            <span class="card-title" id="userName">{{firstName}}
                                {{lastName}}</span>
                        </div>
                    </div>
                    <div class="col s8">
                        <h5>Recent Posts:</h5>
                        <div id="postsSpace">
                            <div class="row">
                                <div class="col s12">
                                    <div class="postContainer">
                                        <div class="row">
                                            <div class="col s12">
                                                <div class="card">
                                                    <div class="card-content">
                                                        <h4>{{firstName}} {{lastName}}</h4>
                                                        <span>
                                                            <h6>{{title}} </h6>
                                                            <p> {{body}} </p>

                                                        </span>
                                                        <p class="right align-right" id="timeStamp">
                                                            <small> Posted: {{createdAt}}</small></p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col s4 left-align">
                        <div class="card-content">
                            <ul id="userInfo">
                                <li id="location">Location: {{location}} </li>
                                <li id="email">Email: {{email}}</li>
                                <li id="github">GitHub: {{github}} </li>
                                <li id="linkedIn">LinkedIn: {{linkedIn}} </li>
                                <li></li>
                                <li id="bio">Bio:</li>
                                <p id="bioSpace">{{bio}}</p>
                            </ul>
                            <button class="waves-effect waves-light btn noBlue updateProfileBtn"
                                id="editProfileBtn">Edit Profile</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const editProfileBtn = $("#editProfileBtn")
    currentUser = parseInt(sessionStorage.getItem("currentUser"))
    let pathArr = window.location.pathname.split("/")
    profileId = parseInt(pathArr[pathArr.length - 1])
    console.log(currentUser)
    console.log(profileId)
    if (profileId === currentUser) {
        console.log("Boolean Passed")
        editProfileBtn.attr("style", "display: initial")
    }

    editProfileBtn.on("click", () => {
        window.location.replace("/edit_profile/" + profileId)
    })
</script>